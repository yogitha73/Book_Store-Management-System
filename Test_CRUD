import unittest
import json
import os
import tempfile
from data_manager import DataManager

class TestCRUDOperations(unittest.TestCase):
    """Unit tests for CRUD operations"""
    
    def setUp(self):
        """Set up test fixtures before each test method"""
        # Create a temporary file for testing
        self.test_file = tempfile.NamedTemporaryFile(mode='w', suffix='.json', delete=False)
        # Initialize with valid JSON structure
        initial_data = {
            'books': [],
            'next_id': 1,
            'last_updated': '2023-01-01T00:00:00.000000'
        }
        json.dump(initial_data, self.test_file, indent=2)
        self.test_file.close()
# Initialize DataManager with test file
        self.data_manager = DataManager(self.test_file.name)
        
        # Sample book data for testing
        self.sample_book = {
            'title': 'Test Book',
            'author': 'Test Author',
            'isbn': '978-0-123456-78-9',
            'price': 29.99,
            'quantity': 10,
            'genre': 'Fiction',
            'description': 'A test book for unit testing'
        }
    
    def tearDown(self):
        """Clean up after each test method"""
        # Remove the temporary test file
        try:
            os.unlink(self.test_file.name)
        except FileNotFoundError:
            pass
    
    def test_create_book(self):
        """Test creating a new book"""
        # Create a book
        book = self.data_manager.create_book(self.sample_book)
        
        # Verify book was created with correct data
        self.assertEqual(book['title'], self.sample_book['title'])
        self.assertEqual(book['author'], self.sample_book['author'])
        self.assertEqual(book['isbn'], self.sample_book['isbn'])
        self.assertEqual(book['price'], self.sample_book['price'])
        self.assertEqual(book['quantity'], self.sample_book['quantity'])
        self.assertEqual(book['genre'], self.sample_book['genre'])
        self.assertEqual(book['description'], self.sample_book['description'])
        
        # Verify book has ID and timestamps
        self.assertIsNotNone(book['id'])
        self.assertIsNotNone(book['created_at'])
        self.assertIsNotNone(book['updated_at'])
        
        # Verify book exists in data
        all_books = self.data_manager.get_all_books()
        self.assertEqual(len(all_books), 1)
        self.assertEqual(all_books[0]['id'], book['id'])

 def test_read_book(self):
        """Test reading/retrieving books"""
        # Create a book first
        created_book = self.data_manager.create_book(self.sample_book)
        
        # Test get_all_books
        all_books = self.data_manager.get_all_books()
        self.assertEqual(len(all_books), 1)
        self.assertEqual(all_books[0]['id'], created_book['id'])
        
        # Test get_book_by_id
        retrieved_book = self.data_manager.get_book_by_id(created_book['id'])
        self.assertIsNotNone(retrieved_book)
        self.assertEqual(retrieved_book['title'], self.sample_book['title'])
        
        # Test get_book_by_id with non-existent ID
        non_existent_book = self.data_manager.get_book_by_id(999)
        self.assertIsNone(non_existent_book)
        
        # Test get_book_by_isbn
        retrieved_by_isbn = self.data_manager.get_book_by_isbn(self.sample_book['isbn'])
        self.assertIsNotNone(retrieved_by_isbn)
        self.assertEqual(retrieved_by_isbn['id'], created_book['id'])
    
    def test_update_book(self):
        """Test updating an existing book"""
        # Create a book first
        created_book = self.data_manager.create_book(self.sample_book)
        
        # Update data
        update_data = {
            'title': 'Updated Test Book',
            'price': 39.99,
            'quantity': 15
        }
# Update the book
        updated_book = self.data_manager.update_book(created_book['id'], update_data)
        
        # Verify updates
        self.assertEqual(updated_book['title'], update_data['title'])
        self.assertEqual(updated_book['price'], update_data['price'])
        self.assertEqual(updated_book['quantity'], update_data['quantity'])
        
        # Verify unchanged fields
        self.assertEqual(updated_book['author'], self.sample_book['author'])
        self.assertEqual(updated_book['isbn'], self.sample_book['isbn'])
        
        # Verify updated_at changed
        self.assertNotEqual(updated_book['updated_at'], created_book['updated_at'])
        
        # Test update with non-existent ID
        with self.assertRaises(Exception):
            self.data_manager.update_book(999, update_data)
    
    def test_delete_book(self):
        """Test deleting a book"""
        # Create a book first
        created_book = self.data_manager.create_book(self.sample_book)
        
        # Verify book exists
        all_books = self.data_manager.get_all_books()
        self.assertEqual(len(all_books), 1)
        
        # Delete the book
        result = self.data_manager.delete_book(created_book['id'])
        self.assertTrue(result)
        
        # Verify book is deleted
        all_books = self.data_manager.get_all_books()
        self.assertEqual(len(all_books), 0)
        
        # Verify book cannot be retrieved
        retrieved_book = self.data_manager.get_book_by_id(created_book['id'])
        self.assertIsNone(retrieved_book)
        
        # Test delete with non-existent ID
        with self.assertRaises(Exception):
            self.data_manager.delete_book(999)
    
    def test_isbn_uniqueness(self):
        """Test that ISBN must be unique"""
        # Create first book
        book1 = self.data_manager.create_book(self.sample_book)
        
        # Try to create another book with same ISBN
        duplicate_book = self.sample_book.copy()
        duplicate_book['title'] = 'Different Title'
        
        # This should work in the data manager (validation is in the API layer)
        book2 = self.data_manager.create_book(duplicate_book)
        
        # Verify both books exist
        all_books = self.data_manager.get_all_books()
        self.assertEqual(len(all_books), 2)
        
        # Test book_exists_by_isbn
        self.assertTrue(self.data_manager.book_exists_by_isbn(self.sample_book['isbn']))
        self.assertFalse(self.data_manager.book_exists_by_isbn('non-existent-isbn'))
    
    def test_data_validation(self):
        """Test data type validation"""
        # Test with invalid data types
        invalid_book = self.sample_book.copy()
        invalid_book['price'] = 'not-a-number'
        
        with self.assertRaises(ValueError):
            self.data_manager.create_book(invalid_book)
        
        invalid_book['price'] = 29.99
        invalid_book['quantity'] = 'not-a-number'
        
        with self.assertRaises(ValueError):
            self.data_manager.create_book(invalid_book)
    
    def test_search_functionality(self):
        """Test search functionality"""
        # Create multiple books
        books = [
            {
                'title': 'Python Programming',
                'author': 'John Doe',
                'isbn': '978-1-111111-11-1',
                'price': 49.99,
                'quantity': 5,
                'genre': 'Programming'
            },
            {
                'title': 'JavaScript Basics',
                'author': 'Jane Smith',
                'isbn': '978-2-222222-22-2',
                'price': 39.99,
                'quantity': 8,
                'genre': 'Programming'
            },
            {
                'title': 'Mystery Novel',
                'author': 'Bob Johnson',
                'isbn': '978-3-333333-33-3',
                'price': 19.99,
                'quantity': 12,
                'genre': 'Mystery'
            }
        ]
        
        
